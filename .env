# API Gateway Port
API_GATEWAY_PORT=3000

# Service Ports (Internal communication within Docker)
AUTH_SERVICE_PORT=3001
USERS_SERVICE_PORT=3002
PRODUCTS_SERVICE_PORT=3003
ORDERS_SERVICE_PORT=3004
CART_SERVICE_PORT=3005

# JWT Configuration
JWT_SECRET=your-super-secret-key-that-is-at-least-32-characters-long
JWT_EXPIRATION=3600s

# Users Microservice (PostgreSQL)
USERS_DB_HOST=users-db
USERS_DB_PORT=5432
USERS_DB_USER=admin
USERS_DB_PASSWORD=password
USERS_DB_NAME=users

# Products Microservice (PostgreSQL)
PRODUCTS_DB_HOST=products-db
PRODUCTS_DB_PORT=5432
PRODUCTS_DB_USER=admin
PRODUCTS_DB_PASSWORD=password
PRODUCTS_DB_NAME=products

# Orders Microservice (PostgreSQL)
ORDERS_DB_HOST=orders-db
ORDERS_DB_PORT=5432
ORDERS_DB_USER=admin
ORDERS_DB_PASSWORD=password
ORDERS_DB_NAME=orders

# Cart Microservice (MongoDB)
MONGO_URI=mongodb://mongo-cart:27017/cart

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# Kafka Configuration
KAFKA_BROKER=kafka:9092